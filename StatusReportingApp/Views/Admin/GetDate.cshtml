@model StatusReportingApp.Models.DatePicker
@{
    ViewBag.Title = "Get Records by Date";
}
<h2 class="text-center">
    Get Records by Date</h2>
<br />
@using (Html.BeginForm("GetRecordsByDate", "Admin", FormMethod.Post))
{
    @Html.ValidationSummary(true)
   
    <div class="col-md-4 col-md-offset-4">
        <div>
            <label for="Start">
                Start Date</label>
            @Html.TextBoxFor(model => model.Start, new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(model => model.Start)
        </div>
        <br />
        <div>
            <label for="End">
                End Date</label>
            @Html.TextBoxFor(model => model.End, new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(model => model.End)
        </div>
        <br />
        <label for="GroupID">
            Group</label>
        @Html.DropDownListFor(model => model.GroupID, new SelectList(new List<object>{
                                                                                    new{value=1,text="Dev"},
                                                                                    new{value=2,text="QA"},
                                                                                    new{value=3,text="BA"}}, "value", "text", 2), new { @class = "form-control" })
        <br />
        <div class="text-center">
            <input type="submit" class="btn btn-info" value="Get Records" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
