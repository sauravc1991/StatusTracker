@model StatusReportingApp.Models.LoginData
@{
    ViewBag.Title = "Re-Login";
}
<fieldset>
    @using (Html.BeginForm("Login", "AccountManagement", FormMethod.Post))
    {
    
        @Html.ValidationSummary(true)
        <div class="col-md-4 col-md-offset-4">
            <div class="form-group">
                @Html.TextBoxFor(model => model.UserID, new { placeholder = "Enter your Username", @class = "form-control input-lg" })
                @Html.ValidationMessageFor(model => model.UserID)
            </div>
            <div class="form-group">
                @Html.PasswordFor(model => model.Password, new { placeholder = "Enter your Password", @class = "form-control input-lg" })
                @Html.ValidationMessageFor(model => model.Password)
            </div>
            <div align="center">
                <span>
                    <input type="submit" value="Login" class="btn btn-info" /></span> <span>
                        <input type="reset" value="Reset" class="btn btn-danger" /></span>
            </div>
            <br />
            <div>
                <h4 class="text text-danger text-center">
                    <b>Invalid Login Credentials<br />
                        Please try again</b></h4>
            </div>
        </div>
   
    }
</fieldset>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
