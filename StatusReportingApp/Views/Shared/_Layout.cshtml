<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="../../Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="../../Content/londinium-theme.css" rel="stylesheet" type="text/css" />
    <link href="../../Content/styles.css" rel="stylesheet" type="text/css" />
    <link href="../../Content/icons.css" rel="stylesheet" type="text/css" />
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&amp;subset=latin,cyrillic-ext"
        rel="stylesheet" type="text/css">
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <script src="../../Scripts/bootstrap.min.js" type="text/javascript"></script>
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default" role="navigation">
        <div class="navbar-header">
            <a class="navbar-brand" href="#" width="15px">
                <img src="../../Content/themes/base/images/IH_logo.png" alt="Londinium" width="160px"
                    height="32px"></a>
        </div>
        <ul class="nav navbar-nav navbar-right">
            @if (Session["RoleID"] != null)
            {   
                <li class="active"><a href="/Route/RouteUser">Home</a></li>
                <li class="active"><a href="/Task/Create">Log your status</a></li>
                <li class="active"><a href="/Test/SetNewPassword">Change password</a></li>
                <li class="active"><a href="/AccountManagement/Logout">Logout</a></li>
            }
        </ul>
    </div>
    <div class="page-container">
        <br />
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
