@model DataAccessLayer.Entity.StatusReport
@{
    ViewBag.Title = "Delete";
}
<h3 align="center">
    Are you sure you want to delete this?</h3>
<br />
<div class="container">
    <div class="row">
        <div class="span6">
            <table class="table table-bordered table-responsive table-hover table-condensed table-striped"
                align="center">
                <tr>
                    <td>
                        <b>
                            @Html.DisplayName("JIRA ID")</b>
                    </td>
                    <td>@Html.DisplayFor(model => model.JiraID)
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>@Html.DisplayName("Employee Name")</b>
                    </td>
                    <td>@Html.DisplayFor(model => model.EmployeeName)
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>@Html.DisplayName("Description")</b>
                    </td>
                    <td>@Html.DisplayFor(model => model.Description)
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>@Html.DisplayName("Percentage Completion")</b>
                    </td>
                    <td>@Html.DisplayFor(model => model.PercentComplete)%
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>@Html.DisplayName("Plan End Date")</b>
                    </td>
                    <td>@Html.DisplayFor(model => model.PlanEndDate)
                    </td>
                </tr>
                <tr>
                    <td>
                        <b>@Html.DisplayName("Comments")</b>
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Comments)
                </tr>
            </table>
        </div>
    </div>
</div>
@using (Html.BeginForm())
{
    <div align="center">
        <span>
            <input type="submit" value="Delete" class="btn btn-danger" /></span> <span><a href="/Task"
                class="btn btn-info">Back to List</a></span>
    </div>
}
